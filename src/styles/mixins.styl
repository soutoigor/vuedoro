alignCenter()
  display flex
  align-items center

justifyCenter()
  display flex
  justify-content center

addShadow()
  box-shadow 0 1px 3px rgba(#000.12), 0 1px 2px rgba(#000.24)

hoverTransition()
  transition background-color linear .3s
  &:hover
    background-color rgba(#000, .09)
    transition @transition
